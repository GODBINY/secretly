{
  "appId": "com.secretly.chat",
  "productName": "Secretly Chat",
  "directories": {
    "output": "dist"
  },
  "files": [
    "client/**/*",
    "server/**/*",
    "package.json"
  ],
  "mac": {
    "category": "public.app-category.social-networking",
    "target": "dmg"
  },
  "win": {
    "target": "nsis"
  },
  "linux": {
    "target": "AppImage"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}

